{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "npm"
  },
  "newProjectRoot": "projects",
  "projects": {
    "ohmyadmin": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "browser": "src/main.ts",
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": [
              "src/styles.scss"
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "ohmyadmin:build:production"
            },
            "development": {
              "buildTarget": "ohmyadmin:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "test": {
          "builder": "@angular/build:unit-test"
        }
      }
    },
    "component-library": {
      "projectType": "library",
      "root": "projects/component-library",
      "sourceRoot": "projects/component-library/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "configurations": {
            "production": {
              "tsConfig": "projects/component-library/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/component-library/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": "projects/component-library/.storybook",
            "browserTarget": "component-library:build",
            "compodoc": true,
            "compodocArgs": [
              "-e",
              "json",
              "-d",
              "projects/component-library"
            ],
            "outputDir": "dist/storybook/component-library",
            "styles": [
              "projects/component-library/src/styles/global.scss"
            ]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/component-library/**/*.ts",
              "projects/component-library/**/*.html"
            ]
          }
        },
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "configDir": "projects/component-library/.storybook",
            "browserTarget": "component-library:build",
            "compodoc": true,
            "compodocArgs": [
              "-e",
              "json",
              "-d",
              "projects/component-library"
            ],
            "port": 6006,
            "styles": [
              "projects/component-library/src/styles/global.scss"
            ]
          }
        },
        "test": {
          "builder": "@angular/build:unit-test",
          "options": {
            "browsers": ["chromium"],
            "coverage": true,
            "tsConfig": "projects/component-library/tsconfig.spec.json",
            "include": [
              "projects/component-library/src/components/sample/sample.component.spec.ts"
            ],
            "coverageThresholds": {
              "branches": 80,
              "functions": 80,
              "lines": 80,
              "statements": 80
            }
          }
        }
      },
      "schematics": {
        "@schematics/angular:component": {
          "addTypeToClassName": true,
          "changeDetection": "OnPush",
          "path": "projects/component-library/src/components",
          "style": "scss",
          "type": "component"
        },
        "@schematics/angular:directive": {
          "addTypeToClassName": true,
          "flat": false,
          "path": "projects/component-library/src/directives",
          "type": "directive"
        },
        "@schematics/angular:enum": {
          "path": "projects/component-library/src/enums",
          "type": "enum"
        },
        "@schematics/angular:pipe": {
          "flat": false,
          "path": "projects/component-library/src/pipes",
          "typeSeparator": "."
        }
      }
    }
  }
}
